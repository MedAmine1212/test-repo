{% extends 'adminBase.html.twig' %}

{% block body %}
	<style>
		.card {
			width: 70%;
			height: 70%;
			margin: 40px 0 0;
		}
	</style>
	<div class="content-page">
		<div
			class="content">

			<!-- Start Content-->
			<div class="container-fluid">
				<div class="h-100 d-flex align-items-center justify-content-center">
					<div class="card">
						<div class="card-body">
							{% block header_title %}
								<h4 class="header-title">Ajouter un test !</h4>
								<br><br>
							{% endblock %}
							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
							<div class="row mb-3">
								<label for="inputEmail3" class="col-4 col-form-label">
									{{ form_label(form.type) }}<span class="text-danger">*</span>
								</label>
								<div class="col-7">
									{{ form_widget(form.type) }}
									{{ form_errors(form.type) }}
								</div>
							</div>
							<div class="row mb-3">
								<label for="hori-pass1" class="col-4 col-form-label">{{ form_label(form.minPoints) }}<span class="text-danger">*</span>
								</label>
								<div class="col-7">
									{{ form_widget(form.minPoints) }}
									{{ form_errors(form.minPoints) }}
								</div>
							</div>
							<div class="row mb-3">
								<label for="hori-pass2" class="col-4 col-form-label">{{ form_label(form.duration) }}
									<span class="text-danger">*</span>
								</label>
								<div class="col-7">
									{{ form_widget(form.duration) }}
									{{ form_errors(form.duration) }}
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-8 offset-4">
									{% block btn %}
										<input type="submit" class="btn btn-primary waves-effect waves-light" value="Ajouter">
									{% endblock %}
									<a href="{{path('getTests')}}">
										<input type="button" class="btn btn-secondary waves-effect" value="Annuler">
									</a>
								</div>
							</div>

							{{ form_end(form) }}
						</div>
					</div>
					<!-- end card -->

				</div>
				<!-- end col -->


			</div>
			<!-- container -->

		</div>
	{% endblock %}
